extends layout

block content
  h1= "Search Results - electronics"
  - 
    let results = [
          {
             "electronicName": "samsung",
             "electronicType": "Mobile",
             "electronicCost": 50000
          },
          {
            "electronicName": "lenova",
             "electronicType": "laptop",
             "electronicCost": 75000
          },
          {
             "electronicName": "boat",
             "electronicType": "earphones",
             "electronicCost": 3000
          },                   
      ]

  div(class= "container-fluid")
    div(class = "row")  
      each item,index in results
        div(class= "col-sm-2", onclick=`buy(${index})`)  Name : &nbsp; #{item.electronicName}  Type : &nbsp; #{item.electronicType}  Cost :  &nbsp; #{item.electronicCost}
        

  script.
    function buy(itemNum){
      alert(`You purchased item ${itemNum+1}`)
    }